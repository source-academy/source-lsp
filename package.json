{
  "name": "source-lsp",
  "displayName": "Source-LSP",
  "description": "lsp server for source",
  "version": "0.1.5",
  "main": "./client/out/extension",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "source",
        "aliases": [
          "Source",
          "source"
        ],
        "extensions": [
          ".source"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "source",
        "scopeName": "source.source",
        "path": "./syntaxes/source.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "configuration",
      "properties": {
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "on",
            "messages",
            "verbose"
          ],
          "default": "on",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "source.setLanguageVersion",
        "title": "Source: Set Source Version Used"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "source.setLanguageVersion",
          "when": "resourceFilename",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "jsdom": "^26.0.0",
    "turndown": "^7.2.0",
    "vscode-languageserver": "^9.0.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -b ./client && node esbuild.js",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "node node_modules/mocha/bin/mocha.js dist/tests/*.js --ui tdd",
    "docs": "node ./server/src/docs/build_docs.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "esbuild": "^0.25.1",
    "eslint": "^9.13.0",
    "mocha": "^11.1.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
